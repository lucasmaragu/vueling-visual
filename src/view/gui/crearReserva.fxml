<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CrearReservaController">
    <center>
        <VBox spacing="10" alignment="CENTER" padding="20">
            <Label text="Crear Reserva" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Vuelo:"/>
                <ComboBox fx:id="comboVuelos" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Fecha de Reserva:"/>
                <DatePicker fx:id="dateReserva"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Cantidad de Personas:"/>
                <TextField fx:id="txtCantidadPersonas" promptText="Ingrese la cantidad"/>
            </HBox>

            <HBox spacing="10">
                <Label text="ID Cliente:"/>
                <TextField fx:id="txtIdCliente" promptText="Ingrese el ID del cliente"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Asientos:"/>
                <TextField fx:id="txtAsientos" promptText="Ingrese los asientos separados por comas"/>
            </HBox>

            <Button text="Realizar Reserva" fx:id="btnReservar" onAction="#crearReserva" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        </VBox>
    </center>
</BorderPane>