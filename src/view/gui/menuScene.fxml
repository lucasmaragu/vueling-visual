<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.controllers.MainMenuController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2E2E2E;">

    <children>
        <!-- Título principal -->
        <Text layoutX="180.0" layoutY="50.0" text="Menú Principal" fill="white">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Text>

        <!-- Botones de opciones -->
        <Button fx:id="verVuelosButton" text="Ver Vuelos Disponibles" layoutX="200.0" layoutY="100.0"
                prefWidth="200.0" onAction="#handleVerVuelos"
                style="-fx-background-color: #444444; -fx-text-fill: white; -fx-border-radius: 8px; -fx-font-weight: bold; -fx-padding: 10px;"/>

        <Button fx:id="reservarVueloButton" text="Realizar Reserva" layoutX="200.0" layoutY="150.0"
                prefWidth="200.0" onAction="#handleReservarVuelo"
                style="-fx-background-color: #444444; -fx-text-fill: white; -fx-border-radius: 8px; -fx-font-weight: bold; -fx-padding: 10px;"/>

        <Button fx:id="verReservasButton" text="Ver Reserva" layoutX="200.0" layoutY="200.0"
                prefWidth="200.0" onAction="#handleVerReservas"
                style="-fx-background-color: #444444; -fx-text-fill: white; -fx-border-radius: 8px; -fx-font-weight: bold; -fx-padding: 10px;"/>

        <Button fx:id="cerrarSesionButton" text="Cerrar Sesión" layoutX="200.0" layoutY="250.0"
                prefWidth="200.0" onAction="#handleCerrarSesion"
                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-border-radius: 8px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </children>
</AnchorPane>
